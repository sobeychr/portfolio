{
  "compilerOptions": {
    "baseUrl": ".",
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "paths": {
      "@components/*": [
        "src/react/components/*"
      ],
      "@context/*": [
        "src/react/context/*"
      ],
      "@core/*": [
        "src/react/core/*"
      ],
      "@hooks/*": [
        "src/react/hooks/*"
      ],
      "@styles/*": [
        "src/react/styles/*"
      ],
      "@utils/*": [
        "src/react/utils/*"
      ]
    },
    "strictNullChecks": true
  },
  "exclude": [
    "public",
    "node_modules"
  ],
  "include": [
    "src/react"
  ]
}